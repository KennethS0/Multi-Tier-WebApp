[Unit]
Description=Simple App HTTP Service
After=network.target


[Service]
ExecStart=/usr/bin/python3 {{ app_dir }}/app.py
Environment=APP_PORT={{ app_port }}
Restart=on-failure
StandardOutput=append:/var/log/python_app_service.log
StandardError=append:/var/log/python_app_service.log


[Install]
WantedBy=multi-user.target